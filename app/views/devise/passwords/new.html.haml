.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = t('Forgot your password?')
        .panel-body
          = form_for(resource, as: resource_name, url: password_path(resource_name), method: :post) do |f|
            .form-group
              = f.label :email, t("Email")
              %abbr{title: t('This field is required')} *
              = f.email_field :email, autofocus: true, required: true, class: 'form-control', placeholder: t('Email')
            %p.text-right
              %button{type: 'submit', class: 'btn btn-success'}
                = t('Send me reset password instructions')
              
          = render partial: 'devise/shared/help'
