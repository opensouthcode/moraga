.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = t('Resend confirmation instructions')
        .panel-body
          = form_for(resource, as: resource_name, url: confirmation_path(resource_name), method: :post) do |f|
            .form-group
              = f.label :email, "Email"
              %abbr{title: t('This field is required')} *
              = f.email_field :email, autofocus: true, required: true, class: 'form-control', placeholder: 'Email'
            %p.text-right
              %button{type: 'submit', class: 'btn btn-success'}
                = t('Send me reset password instructions')

          = render partial: 'devise/shared/help'
